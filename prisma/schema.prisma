datasource db {
  provider = "sqlite"
  url      = env("PRISMA_DATABASE_URL")
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"

  previewFeatures = ["driverAdapters", "queryCompiler"]
}

model User {
  id           String @id @default(uuid())
  email        String @unique
  passwordHash String

  name  String
  books Book[]
}

model Book {
  id     String @id @default(uuid())
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
